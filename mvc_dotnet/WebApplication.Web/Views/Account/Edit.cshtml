@model WebApplication.Web.Models.EditViewModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit Profile</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WorkoutGoals" class="control-label">Workout Goals</label>
                <select asp-for="WorkoutGoals" asp-items="Model.WorkoutGoalsSelection" class="form-control"></select>
            </div>
            <div class="form-group">
                <label asp-for="WorkoutProfile" class="control-label">Body Profile</label>
                <select asp-for="WorkoutProfile" asp-items="Model.BodyProfile" class="form-control"></select>
            </div>
            <div class="form-group">
                <label asp-for="PhotoPath" class="control-label">Profile Image</label>
                <select asp-for="PhotoPath" asp-items="Model.Avatars" class="form-control"></select>

            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

