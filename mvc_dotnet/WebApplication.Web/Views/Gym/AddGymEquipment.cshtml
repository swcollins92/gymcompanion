@model WebApplication.Web.Models.GymDetails.GymEquipment

@{
    ViewData["Title"] = "EditGymEquipment";
}

<h2>Add Gym Equipment</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddGymEquipment">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProperUsage" class="control-label"></label>
                <input asp-for="ProperUsage" class="form-control" />
                <span asp-validation-for="ProperUsage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhotoPath" class="control-label"></label>
                <select asp-for="PhotoPath" asp-items="Model.GymEquipments" class="form-control" ></select>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

